/* TODO: This section contains only the gaps for all elements - see if this is a good approach or we need to merge these with the above classes */
.wrapperTitleContentBlock {
  @apply md:text-start mb-10 text-center;
}
.rightCol {
  @apply flexCol md:self-start;
}
.flexStart {
  @apply items-center flex md:flex-row flex-col md:items-start;
}
.flexCol {
  @apply flex flex-col;
}
.mobileNav {
  @apply md:hidden flex flex-col h-screen max-w-[90%] w-full top-[var(--nav-height)] absolute z-50 bg-base-300 bg-transparent/80  overflow-y-auto whitespace-nowrap;
}
.pageTitle {
  @apply py-4 px-4;
}
.section {
  @apply p-0;
}

.sectionPad {
  @apply p-2 md:p-8;
}

.sectionCarousel {
  @apply relative;
}

.sectionTitle {
  @apply p-4;
}
.sectionText {
  @apply px-2 md:px-4 py-4;
}
.sectionList {
  @apply sectionTitle;
  li {
    @apply pb-2;
  }
}

footer {
  .footerStrip {
    @apply flex flex-row py-2 my-2;
