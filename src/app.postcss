/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --nav-height: 64px;
}

@font-face {
  font-family: 'Manrope';
  src: url('https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap');
  font-weight: 300 700;
  font-display: swap;
}
/* format('supports variation'); */

.btn {
  text-transform: none;
}
/* *{
    transition-duration: 2s;
